= form_for @virus do |f|
  - if @virus.errors.any?
    #error_explanation
      %h2= "#{pluralize(@virus.errors.count, "error")} prohibited this virus from being saved:"
      %ul
        - @virus.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
